<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
       http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="CRS-2_add_domain_sequence" author="g.liseychikov">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="domain_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="domain_id_seq" incrementBy="1" cacheSize="1" startValue="1"/>
    </changeSet>

    <changeSet id="CRS-2_create_domains_table" author="g.liseychikov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="domains"/>
            </not>
        </preConditions>

        <createTable tableName="domains">
            <column name="id" type="BIGINT" defaultValueSequenceNext="domain_id_seq" remarks="Идентификатор домена">
                <constraints primaryKey="true" primaryKeyName="domain__id_idx"/>
            </column>
            <column name="domain" type="TEXT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
